LIBRARY IEEE;
USE IEEE.std_logic_1164.all;
---------------------------------------------------------
ENTITY Mtx_Encoder IS

 PORT(
		COLS_IN_0  :IN   STD_LOGIC_VECTOR(0 TO 15);
		COLS_IN_1  :IN   STD_LOGIC_VECTOR(0 TO 15);
		COLS_IN_2  :IN	  STD_LOGIC_VECTOR(0 TO 15);
		COLS_IN_3  :IN   STD_LOGIC_VECTOR(0 TO 15);
		COLS_IN_4  :IN	  STD_LOGIC_VECTOR(0 TO 15);
		COLS_IN_5  :IN   STD_LOGIC_VECTOR(0 TO 15);
		COLS_IN_6  :IN	  STD_LOGIC_VECTOR(0 TO 15);
		COLS_IN_7  :IN   STD_LOGIC_VECTOR(0 TO 15);
		
		COLS_OUT   :OUT  STD_LOGIC_VECTOR(0 TO 15);
		
		ROWS_IN	:IN 	STD_LOGIC_VECTOR(0 TO 2);
		ROWS_OUT	:OUT	STD_LOGIC_VECTOR(0 TO 7));
		
END ENTITY;

ARCHITECTURE Functional OF Mtx_Encoder IS

BEGIN
WITH ROWS_IN SELECT
COLS_OUT	<= COLS_IN_0  WHEN "000",
				COLS_IN_1  WHEN "001",
				COLS_IN_2  WHEN "010",
				COLS_IN_3  WHEN "011",
				COLS_IN_4  WHEN "100",
				COLS_IN_5  WHEN "101",
				COLS_IN_6  WHEN "110",
				COLS_IN_7  WHEN "111",
				"0000000000000000" WHEN OTHERS;
				
WITH ROWS_IN SELECT
ROWS_OUT	<= "01111111" WHEN "000",
				"10111111" WHEN "001",
				"11011111" WHEN "010",
				"11101111" WHEN "011",
				"11110111" WHEN "100",
				"11111011" WHEN "101",
				"11111101" WHEN "110",
				"11111110" WHEN "111",
				"11111111" WHEN OTHERS;

END ARCHITECTUREÂ functional;